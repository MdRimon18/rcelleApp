@page "/create_invoice"


<div class="card mb-3">
    <div class="card-header">
        <h5 class="mb-0" data-anchor="data-anchor">
            <i class="fas fa-arrow-left"></i>
            Create Invoice
        </h5>
    </div>
    <div class="card-body bg-body-tertiary">
<div class="row">
    <div class="col-10">
                <div class="row">
                    <div class="col-sm-3 animated-div">
                        <div class="form-group">
                            <label for="customerMobileNo" class="label text-dark">Customer Mobile No</label><span class="text-danger">*</span>
                            <input readonly name="customerMobileNo" type="text" class="form-control form-control-sm form-rounded " placeholder="customer mobile no" required>
                        </div>
                    </div>

                    <div class="col-sm-3 animated-div">
                        <div class="form-group">
                            <label class="label text-dark">Date</label>
                            <input class="form-control form-control-sm form-rounded"
                                   type="date"
                                   name="entryDate"
                                   placeholder="Date">
                        </div>
                    </div>

                    <div class="col-sm-3 animated-div">
                        <div class="form-group">
                            <label for="name" class="label text-dark">Product Name</label>
                            <input name="name" type="text" class="form-control form-control-sm form-rounded" placeholder="Product name" required>

                        </div>
                    </div>
                    <div class="col-sm-3 animated-div">
                        <div class="form-group">
                            <label for="salesBy" class="label text-dark">Sales By</label>
                            <input readonly name="salesBy" type="text" class="form-control form-control-sm form-rounded" placeholder="sales by" required>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-3 animated-div">
                        <div class="form-group">
                            <label for="categorySelect" class="label text-dark">Category</label><span class="text-danger">*</span>
                            <select required name="catagorySelect" class="form-control form-control-sm form-rounded">
                                <option value="">category select</option>
                                <!-- Options for productCategories -->
                            </select>
                        </div>
                    </div>

                    <div class="col-sm-3 animated-div">
                        <div class="form-group">
                            <label for="subCategory" class="label text-dark">Sub Category</label>
                            <input name="subCategory" type="text" class="form-control form-control-sm form-rounded" placeholder="sub category" required>

                        </div>
                    </div>

                    <div class="col-sm-3 animated-div">
                        <div class="form-group">
                            <label for="chooseProduct" class="label text-dark">Choose Product</label><span class="text-danger">*</span>
                            <input name="chooseProduct" type="text" class="form-control form-control-sm form-rounded" placeholder="Choose Product" required>

                        </div>
                    </div>

                    <div class="col-sm-3 animated-div">
                        <div class="form-group">
                            <label for="chooseSerialNumber" class="label text-dark">Choose Serial No</label><span class="text-danger">*</span>
                            <input name="chooseSerialNumber" type="text" class="form-control form-control-sm form-rounded" placeholder="Choose Serial No" required>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <table class="table table-sm">
                        <thead class="thdchild">
                            <tr>
                                <th scope="col">Product Category</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Quantity<span class="text-danger"><strong class="bigger-asterisk">*</strong></span></th>
                                <th scope="col">Unit</th>
                                <th scope="col">Rate</th>
                                <th scope="col">VAT</th>
                                <th scope="col">Discount</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <input type="text" class="form-control form-rounded bold-input" readonly>
                                </td>
                                <td>
                                    <input type="text" class="form-control form-rounded bold-input" readonly>
                                </td>
                                <td>
                                    <input type="number" class="form-control form-rounded bold-input" placeholder="Quantity">
                                    <div class="text-danger bold-input">Qty is Required</div>
                                </td>
                                <td>
                                    <input type="text" class="form-control form-rounded" readonly placeholder="Unit">
                                </td>
                                <td>
                                    <input type="number" class="form-control form-rounded" placeholder="Rate">
                                </td>
                                <td>
                                    <input type="number" readonly class="form-control form-rounded" placeholder="V(%)">
                                </td>
                                <td>
                                    <input type="number" class="form-control form-rounded" placeholder="D(%)">
                                </td>
                                <td>
                                    <input readonly type="number" class="form-control form-rounded bold-input" placeholder="Amount">
                                </td>
                                <td>
                                    <button class="btn btn-outline-primary me-1 mb-1">serial</button>
                                </td>
                                <td>
                                    <button title="Delete" class="btn btn-light ml-1 addMore">
                                        <i class="far fa-trash-alt fa-lg text-danger"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>
                <div class="row">
                    <div class="col-1">
                        <button class="btn btn-outline-primary me-1 mb-1" type="button">
                            Save
                        </button>
                    </div>
                    <div class="col-1">
                        <button class="btn btn-outline-primary me-1 mb-1" type="button">
                            Refresh
                        </button>
                    </div>
                    

                </div>

                <div class="row">
                      <div class="col-8">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Serial No.</th>
                                    <th scope="col">Supplier Org.</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="less-bold-input">Chochlet</td>
                                    <td class="less-bold-input">011</td>
                                    <td class="less-bold-input">Sopno</td>
                                    <td>
                                        <button title="Delete" class="btn btn-light ml-1">
                                            <i class="far fa-trash-alt fa-lg text-danger"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                      </div>
                            
                     

                </div>
            </div>
    
     <div class="col-2">
 
                    <div class="form-group">
                        <label class=""><strong>Total</strong></label>
                        <input type="number" class="form-control form-rounded bold-input" readonly id="JobNo" placeholder="Total Amount">
                    </div>
                    <div class="form-group">
                        <label class=""><strong>Vat</strong></label>
                        <input type="number" class="form-control form-rounded" readonly id="Amount">
                    </div>
                    <div class="form-group">
                        <label class=""><strong>Discount</strong></label>
                        <input type="number" class="form-control form-rounded" readonly id="Amount">
                    </div>
                    <div class="form-group">
                        <label class=""><strong>Additional Discount</strong></label>
                        <input type="number" class="form-control form-rounded" id="additionalDiscount">
                    </div>

                    <div class="form-group">
                        <label class=""><strong>Total Payable</strong></label>
                        <input type="number" class="form-control form-rounded bold-input" readonly id="totalPayable">
                    </div>
                    <div class="form-group">
                        <label class=""><strong>Receive</strong></label>
                        <input type="number" class="form-control form-rounded bold-input" placeholder="Receive">
                        <input type="hidden" class="form-control form-rounded">
                    </div>
                    <div class="form-group">
                        <label class=""><strong>Current Due</strong></label>
                        <input type="number" class="form-control form-rounded" readonly id="totalCurrentDue">
                    </div>
                

      </div>
     
</div>
  


 </div>
 </div>

