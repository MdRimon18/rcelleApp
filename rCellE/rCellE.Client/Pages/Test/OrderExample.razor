                                <option value="1">Company-01</option>
                                <option value="2">Company-02</option>
                                <option value="3">Company-03</option>
                            </select>
                            <div class="invalid-feedback">Please provide a valid Company.</div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label" for="datepickerVal"> Date</label>
                            <input class="form-control datetimepicker form-control-sm" id="datepickerVal" type="text" placeholder="dd/mm/yy" required="required" data-options='{"disableMobile":true,"allowInput":true}' />
                            <div class="invalid-feedback">This field is required</div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label" for="UploadImage">Upload File</label>
                            <input class="form-control form-control-sm" id="UploadImage" type="file" required="" />
                            <div class="invalid-feedback">Please Upload File.</div>
                        </div>
                        <div class="col-md-8">
                            <label class="form-label" for="Message">Message</label>
                            <textarea class="form-control" id="Message" rows="2" placeholder="Message"></textarea>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" id="invalidCheck" type="checkbox" value="" required="" />
                                <label class="form-check-label mb-0" for="invalidCheck">Agree to terms and conditions</label>
                                <div class="invalid-feedback mt-0">You must agree before submitting.</div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-grid gap-2 d-md-block">
                <button class="btn btn-primary btn-sm">Save</button>
                <button class="btn btn-warning btn-sm">Update</button>
                <button class="btn btn-info btn-sm">Search</button>
                <button class="btn btn-success btn-sm">Reference</button>
            </div>
        </div>
    </div>

